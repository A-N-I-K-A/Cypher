            <code class="language-python">
            <div>
              import string

              # take a plain text
              plainText = 'My name is Anika'
              
              # pink a shift key (could be any integer)
              shift = 4
              
              # take an empty string as excrypted text
              encrypted = ''
              
              #take an empty string as decrypted text
              decrypted= ''
              
              # shift every character in the plainText according to the key
              for ch in plainText:
              
                  if ch==' ':
                    encrypted+=" "
              
                  elif (ch.isupper()):
                      val = ord(ch)  # get the ascii value of the upper case character
                      val -= 65  # ascii of 'A'=65(now for A val=0, for B val=1........)
                      val += shift  # shift the value
                      asciiVal = (val % 26) + 65  # take modulo incase the value gets bigger than 26, add 65 to get ascii value
                      encrypted += chr(asciiVal)  # convert back to characer and append in the encrypted text
                  else:
                      # apply same steps just take 97 isntead of 65 because ascii value of a is 97
                      val = ord(ch)
                      val -= 97
                      val += shift
                      asciiVal = (val % 26) + 97
                      encrypted += chr(asciiVal)
              
              
              for ch in encrypted:
              
                  if(ch==' '):
                    decrypted+=' '
              
                  elif (ch.isupper()):
                      val = ord(ch)
                      val -= 65
                      val -= shift
                      asciival = (val %26 ) + 65
                      decrypted += chr(asciival)
                  else:
                      val = ord(ch)
                      val -= 97
                      val -= shift
                      asciiVal = (val % 26) + 97
                      decrypted += chr(asciiVal)
              
              
              print('Plain text: ' + plainText)
              print('Shift ', shift)
              print('Encrypted text: ' + encrypted)
              print('Decrypted text: ' + decrypted)
              
