      <code class="language-python">
        <div>
          key='deceptive'
plainText='meet me after toga party'
print('Plain message: ',plainText)
encryptedText=''
decryptedText=''
key_idx=0

for ch in plainText:
    if (ch==' '):#ignore whitespaces
        continue
    ch=ch.lower()
    ch_val=ord(ch)-97
    key_val=ord(key[key_idx])-97
    key_idx+=1
    key_idx%=len(key)
    en_val=(key_val+ch_val)%26
    encryptedText+=chr(en_val+97)
print('Encrypted Text: ',encryptedText)

key_idx=0
for ch in encryptedText:
    ch_val=ord(ch)-97
    key_val=ord(key[key_idx])-97
    key_idx+=1
    key_idx%=len(key)
    de_val=(ch_val-key_val)%26
    decryptedText+=chr(de_val+97)

print("Decrypted Text: ",decryptedText)


            
            
